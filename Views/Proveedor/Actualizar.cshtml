@model Proveedor

<h1>Actualizar proveedor @Model.Nombre</h1>

<form action="~/proveedor/actualizar" method="post">

<input type="hidden" asp-for="Id_Proveedor">

<div class="form-group">
    <label>Nombre:</label>
    <input type="text" class="form-control" asp-for="Nombre" >
    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Correo:</label>
    <input type="text" class="form-control" asp-for="Correo" >
    @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Numero Telefonico:</label>
    <input type="text" class="form-control" asp-for="Numero_Telefonico" >
    @Html.ValidationMessageFor(m => m.Numero_Telefonico, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Detalles:</label>
    <input type="text" class="form-control" asp-for="Detalles" >
    @Html.ValidationMessageFor(m => m.Detalles, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Direccion:</label>
    <input type="text" class="form-control" asp-for="Direccion" >
    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
</div>

<button class="btn btn-primary">Actualizar</button>

</form>