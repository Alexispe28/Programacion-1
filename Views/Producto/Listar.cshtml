@model List<Producto>

<h1>Listado de Producto</h1>

<table class="table">
    <tr>
        <th>CÃ³digo</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Categoria</th>
        <th>Marca</th>
        <th>Opciones</th>
    </tr>

    @foreach(var p in Model) {
        <tr>
            <td>@p.Id_Producto</td>
            <td>@p.Nombre</td>
            <td>@p.Precio</td>
            <td>@p.Categoria.Nombre</td>
            <td>@p.Marca.Nombre</td>
            <td>
                <a href="~/producto/actualizar/@p.Id_Producto" 
                class="btn btn-primary a-btn-slide-text"><span class="glyphicon glyphicon-edit"></a> | 
                <a href="~/producto/eliminar/@p.Id_Producto" 
                class="btn btn-danger a-btn-slide-text"><span class="glyphicon glyphicon-remove"></a>
            </td>
        </tr>
    }
    

</table>
<a href="~/producto/registrar" 
class="btn btn-primary a-btn-slide-text">Nueva Producto</a>